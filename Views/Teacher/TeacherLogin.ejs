<h3>Teacher Login</h3>
<div class="teachLog">
  <form method="POST" class="teachForm">
    <div class="mb-3">
      <!-- <label for="teachername" class="form-label">Name : Teacher </label> -->
      <label for="username" class="form-label">User Name : </label>
      <input type="text" name="username"  class="form-control" id="username">
      <label for="password" class="form-label">Password : </label>
      <input type="password" name="password"  class="form-control" id="pass">
      <br>
      <input type="checkbox" style="width: 30px;" onclick="myFunction()">Show Password
      <br>
    </div>
    <a><button type="submit" class="btn btn-primary">Submit</button></a>
  </form>
</div>
<script>
  function myFunction() {
  var x = document.getElementById("pass");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>